<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/image_map_icon"
        android:scaleType="fitXY"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp" />

    <TextView
        android:text="map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_map_name"
        android:lines="1"
        android:layout_below="@+id/image_map_icon"
        android:layout_alignLeft="@+id/image_map_icon"
        android:layout_alignStart="@+id/image_map_icon"
        android:layout_alignRight="@+id/image_map_icon"
        android:layout_alignEnd="@+id/image_map_icon"
        android:textSize="10sp"
        android:textAlignment="center" />
</RelativeLayout>